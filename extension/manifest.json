{
  "description": "chrome and firefox web extension for lesspass password manager",
  "manifest_version": 2,
  "name": "lesspass",
  "version": "0.0.2",
  "homepage_url": "https://github.com/lesspass/webextension",
  "icons": {
    "64": "icons/logo-64.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.min.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/logo-32.png",
    "default_title": "LessPass",
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "contact@lesspass.com"
    }
  }
}
