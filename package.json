{
  "name": "lesspass",
  "version": "3.1.1",
  "author": "Guillaume Vincent <guillaume@oslab.fr>",
  "description": "lesspass javascript module to generate idempotent passwords",
  "main": "src/lesspass.js",
  "scripts": {
    "test": "ava --require babel-core/register && xo",
    "build": "rm -rf dist && mkdir dist && browserify -s lesspass ./src/lesspass.js | uglifyjs > dist/lesspass.min.js",
    "prepublish": "npm test && npm run build"
  },
  "keywords": [
    "password",
    "crypto",
    "lesspass"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:lesspass/core.git"
  },
  "engines": {
    "node": ">=4.2.6"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lesspass/core/issues"
  },
  "homepage": "https://github.com/lesspass/core#readme",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-core": "^6.10.4",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "karma": "^1.1.0",
    "karma-ava": "0.0.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "uglify-js": "^2.6.4",
    "xo": "^0.16.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "xo": {
    "esnext": true,
    "space": true,
    "envs": [
      "browser",
      "webextensions",
      "shared-node-browser",
      "es6"
    ],
    "ignores": [
      "lib/**"
    ]
  },
  "ava": {
    "files": [
      "tests/*.js",
      "!tests/karma.conf.js"
    ],
    "source": [
      "src/*.js"
    ]
  }
}
