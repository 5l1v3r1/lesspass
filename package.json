{
  "scripts": {
    "prebuild": "npm prune && npm install",
    "zip": "rm -rf build && mkdir build && cd extension && zip -r extension.zip ./* -x ./*.js && cp extension.zip ../build/lesspass.firefox.xpi && mv extension.zip ../build/lesspass.chrome.zip && cd ..",
    "browserify": "browserify ./extension/content.js -o ./extension/js/content.min.js && browserify -s Url ./extension/url-parser.js -o ./extension/js/url-parser.min.js",
    "build": "npm run browserify && npm run zip",
    "test": "ava tests --require babel-core/register && xo"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.2",
    "jquery": "^3.0.0",
    "lesspass": "^3.1.3",
    "tldjs": "^1.6.2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-core": "^6.10.4",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "jpm": "^1.0.7",
    "jsdom": "^9.3.0",
    "xo": "0.16.0"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "webextensions"
    ],
    "ignores": [
      "extension/vendor/**",
      "extension/dist/**"
    ]
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "source": [
      "extension/*.js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
