{
  "scripts": {
    "build": "rm -rf extension/dist && mkdir extension/dist && browserify ./extension/content.js -o ./extension/dist/content.min.js && browserify ./extension/popup.js -o ./extension/dist/popup.min.js",
    "test": "xo && ava tests --require babel-core/register"
  },
  "devDependencies": {
    "ava": "*",
    "babel-core": "*",
    "babel-preset-es2015": "*",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "jsdom": "^9.0.0",
    "xo": "*"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "envs": [
      "browser",
      "jquery",
      "webextensions"
    ],
    "ignores": [
      "extension/vendor/**",
      "extension/dist/**"
    ]
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "source": [
      "extension/*.js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "lesspass": "^1.1.1",
    "tldjs": "^1.6.2"
  }
}
